<%- include('partials/header.ejs') %>
<main>
    <div class="container">
        <span class="personal-information">
            <img src="<%= data.profilePic %>" alt="User Avatar">
            <p>Yanet Geleta</p>
            <p><%= data.books %> books</p>
        </span>
        <span>
            <nav>
                <form action="/profile" method="post">
                    <button type="submit" name="profileList" value="wantToRead">Want to Read</button>
                    <button type="submit" name="profileList" value="reading">Reading</button>
                    <button type="submit" name="profileList" value="read">Read</button>
                    <button type="submit" name="profileList" value="recommendation">Recommendations</button>
                </form>
            </nav>
        </span>
            <%data.list.forEach(listValue=> {%>
                <span class="books">
                    <!-- these will be looped through for the books present -->
                    <p><%= data.listName %></p>
                    <p><%= listValue.volumeInfo.title %></p>
                    <p><%= listValue.volumeInfo.authors.join(", ") %></p>
                    <button><%= listValue.listName %></button>
                    <img src="<%= listValue.volumeInfo.imageLinks? listValue.volumeInfo.imageLinks.thumbnail: `https://openlibrary.org/images/icons/avatar_book-sm.png` %>">
                </span>
            <%})%>
    </div>
</main>
<%- include('partials/footer.ejs') %>